<% if @hh_order.size > 0 %>
<h2>Please,check in your order: </h2>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Title</th>
			<th>Price</th>
			<th>Qty.</th>
			<th>Summa</th>
		</tr>
	</thead>
	<tbody>
		<% itSumma = 0 %>
		<% @hh_order.each do |key,value| %>
		<% product_ = Product.find(key) %>
		<% price = product_['price'] %>
		<% summa = value * price %>
		<% itSumma = itSumma + summa %>
		<tr>
			<td><%= product_['title'] %></td>
			<td><%= price %></td>
			<td><%= value %></td>
			<td><%= summa %></td>
		</tr>

		<% end %>	

		<tr>
			<td></td><td></td><td></td>
			<td><strong><%= itSumma %></strong></td>
		</tr>				
	</tbody>
</table>

<div>
	<div class="container">  
		<div class="row">
			<div class="col-md-4">
				<h4 class="text-right">if you agree, press Next to confirm the order:</h4>
			</div>
			<div class="col-md-2">
				<form action="/order" method="post">
					<input type="hidden" name="order_conf" value="<%= @order_inp%>">					
					<input id="next_button" type="submit" class="btn btn-success btn-block" value="Next">	
				</form>
			</div>
			<div class="col-md-4">
				<h4 class="text-right">if you don`t, press Back to return:</h4>
			</div>
			<div class="col-md-2">
				<button class="btn btn-primary btn-block" onclick="prev_page()"><span class="glyphicon glyphicon-backward" aria-hidden="true"></span> Back</button>
			</div>
		</div>
		<hr>
	</div>
</div>
<% else %>
<h2 class="text-center">You order is empty</h2>
<% end %>

<script type="text/javascript">
	$(function() {
		hidden_button();		
	})	
</script>